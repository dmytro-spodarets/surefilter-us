model Page {
  id          String        @id @default(cuid())
  slug        String        @unique
  title       String
  description String?
  ogImage     String?
  status      String        @default("published") // draft | published
  type        PageType      @default(CUSTOM)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  sections    PageSection[]
}

model Section {
  id              String         @id @default(cuid())
  type            SectionType
  data            Json
  sharedSectionId String?
  sharedSection   SharedSection? @relation(fields: [sharedSectionId], references: [id], onDelete: SetNull)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  pages           PageSection[]

  @@index([sharedSectionId])
}

model SharedSection {
  id          String      @id @default(cuid())
  name        String      // "Contact CTA", "Newsletter Signup", etc.
  type        SectionType
  data        Json
  description String?     // Описание для админов
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  // Связь с секциями, которые используют эту общую секцию
  sections    Section[]

  @@index([type])
}

model PageSection {
  id        String @id @default(cuid())
  pageId    String
  sectionId String
  position  Int

  page    Page    @relation(fields: [pageId], references: [id], onDelete: Cascade)
  section Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@unique([pageId, sectionId])
  @@index([pageId, position])
}

enum PageType {
  CORE
  CUSTOM
  INDUSTRY
}

// ============================================
// CATALOG SYSTEM
// ============================================

// Product categories (flexible, not hardcoded)
model ProductCategory {
  id          String  @id @default(cuid())
  name        String  @unique // "Heavy Duty", "Automotive", "Industrial", etc.
  slug        String  @unique
  description String? @db.Text
  icon        String?
  position    Int     @default(0)
  isActive    Boolean @default(true)
  
  // Relations
  filterTypes      FilterType[]
  productCategories ProductCategoryAssignment[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([position])
  @@index([isActive])
}

// Brand model - supports multiple brands for future ACES/PIES exports
model Brand {
  id          String    @id @default(cuid())
  name        String    @unique // "Sure Filter", "Premium Guard", etc.
  code        String?   @unique // Short code for ACES/PIES (e.g., "SF", "PG")
  description String?   @db.Text
  logoUrl     String?   // Brand logo S3 path
  website     String?   // Brand website URL
  isActive    Boolean   @default(true)
  position    Int       @default(0) // For sorting in UI
  
  // Relations
  products Product[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([isActive, position])
}

// Product filter types (Air, Oil, Fuel, Cabin, etc.) - separate from CMS FilterType
model ProductFilterType {
  id          String  @id @default(cuid())
  name        String  @unique // "Air Filter", "Oil Filter", "Fuel Filter", "Cabin Filter", etc.
  slug        String  @unique // "air", "oil", "fuel", "cabin"
  code        String? @unique // Short code for ACES/PIES (e.g., "AIR", "OIL", "FUEL")
  description String? @db.Text
  icon        String? // Icon name or emoji
  position    Int     @default(0)
  isActive    Boolean @default(true)
  
  // Relations
  products Product[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([isActive, position])
  @@index([slug])
}

model FilterType {
  id         String  @id @default(cuid())
  categoryId String? // Optional link to ProductCategory
  category   ProductCategory? @relation(fields: [categoryId], references: [id])
  
  parentId String?
  parent   FilterType?  @relation("FilterTypeToChildren", fields: [parentId], references: [id])
  children FilterType[] @relation("FilterTypeToChildren")
  // Note: FilterType is for CMS pages, ProductFilterType is for catalog products

  slug        String
  name        String
  description String?
  icon        String?
  heroImage   String?
  position    Int     @default(0)
  pageSlug    String  @unique
  isActive    Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([categoryId, parentId, slug])
  @@index([categoryId, position])
}

// Catalog products
model Product {
  id          String  @id @default(cuid())
  code        String  @unique // Product code (e.g., "SFO241")
  name        String
  description String?

  // Brand relationship (required)
  brandId String
  brand   Brand  @relation(fields: [brandId], references: [id])

  // Filter type relationship (optional) - what type of filter this is
  filterTypeId String?
  filterType   ProductFilterType? @relation(fields: [filterTypeId], references: [id])

  status String? // e.g., 'Release Product', 'Discontinued'

  // Optional metadata
  tags         String[] @default([])
  manufacturer String?  // Manufacturer name (e.g., "HYUNDAI", "CAT")
  industries   String[] @default([])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Normalized relationships
  categories      ProductCategoryAssignment[] // Many-to-many with priority
  specValues      ProductSpecValue[]
  media           ProductMedia[]
  crossReferences ProductCrossReference[]

  @@index([brandId])
  @@index([filterTypeId])
  @@index([status])
}

// Many-to-many relationship between Product and ProductCategory with priority
model ProductCategoryAssignment {
  id         String  @id @default(cuid())
  productId  String
  categoryId String
  
  isPrimary Boolean @default(false) // Mark primary/priority category
  position  Int     @default(0)     // Order if product has multiple categories
  
  product  Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  category ProductCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([productId, categoryId])
  @@index([productId, isPrimary])
  @@index([categoryId])
}

// Normalized product images and media
model ProductMedia {
  id        String  @id @default(cuid())
  productId String
  assetId   String
  
  isPrimary Boolean @default(false) // Only one primary image per product
  position  Int     @default(0)     // Order of images in gallery
  caption   String? // Optional caption for the image
  
  product Product    @relation(fields: [productId], references: [id], onDelete: Cascade)
  asset   MediaAsset @relation(fields: [assetId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([productId, assetId])
  @@index([productId, position])
  @@index([productId, isPrimary])
  @@index([assetId])
}

// Normalized cross references (OEM, competitor, interchange)
model ProductCrossReference {
  id        String  @id @default(cuid())
  productId String
  
  // Reference details
  refBrandName String  // Brand name (e.g., "HYUNDAI", "Fleetguard", "Baldwin")
  refBrandId   String? // Optional link to Brand model if it's in our system
  refCode      String  // Reference part number (e.g., "26300-35503", "LF3000")
  
  // Reference type and metadata
  referenceType String  @default("OEM") // "OEM", "Competitor", "Supersedes", "Superseded By"
  isPreferred   Boolean @default(false) // Mark as preferred/primary reference
  notes         String? @db.Text        // Additional notes about this cross reference
  
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([productId, refBrandName, refCode])
  @@index([productId, referenceType])
  @@index([refCode]) // For reverse lookup
  @@index([refBrandName])
}

// Master list of available specification parameters
model SpecParameter {
  id       String  @id @default(cuid())
  code     String? @unique // Stable code for ACES/PIES (e.g., "HEIGHT", "OD", "THREAD")
  name     String  // Display name (e.g., "Height", "Outer Diameter")
  unit     String? // Default unit (e.g., "mm", "in", "psi")
  category String? // Category for grouping (e.g., "Dimensions", "Performance")
  position Int     @default(0)
  isActive Boolean @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  values ProductSpecValue[]

  @@index([category, position])
  @@index([isActive])
}

// Value of a specification parameter for a concrete product
model ProductSpecValue {
  id           String  @id @default(cuid())
  productId    String
  parameterId  String
  value        String  // The actual value (e.g., "77", "M22 x 1.5")
  unitOverride String? // Override default unit if needed
  position     Int     @default(0)

  product   Product       @relation(fields: [productId], references: [id], onDelete: Cascade)
  parameter SpecParameter @relation(fields: [parameterId], references: [id], onDelete: Cascade)

  @@unique([productId, parameterId])
  @@index([productId, position])
  @@index([parameterId])
}

// Media assets for file manager
model MediaAsset {
  id          String   @id @default(cuid())
  filename    String
  s3Path      String   @unique // "images/hero/construction.jpg"
  cdnUrl      String   // Full CDN URL
  mimeType    String
  fileSize    Int
  width       Int?     // For images
  height      Int?     // For images
  altText     String?  // For SEO
  tags        String[] @default([])
  folder      String?  // "images/hero", "videos/products", etc.
  isPublic    Boolean  @default(true)
  uploadedBy  String?  // User ID who uploaded
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  productMedia ProductMedia[]

  @@index([folder])
  @@index([mimeType])
  @@index([createdAt])
}

// News & Events system
enum ArticleType {
  NEWS
  EVENT
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model NewsCategory {
  id          String        @id @default(cuid())
  name        String        @unique // "Product Launch", "Trade Show", "Company News"
  slug        String        @unique // "product-launch", "trade-show"
  description String?
  color       String?       // Hex color for UI (#FF5733)
  icon        String?       // Icon name or emoji
  position    Int           @default(0) // For sorting
  isActive    Boolean       @default(true)
  
  articles    NewsArticle[]
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  @@index([position])
}

model NewsArticle {
  id             String        @id @default(cuid())
  slug           String        @unique
  type           ArticleType   @default(NEWS)
  
  // General fields
  title          String
  excerpt        String        // Short description (150-250 chars)
  content        String        @db.Text // Full content (HTML from TinyMCE)
  
  // Images
  featuredImage    String?
  featuredImageAlt String?
  
  // Metadata
  categoryId     String?
  category       NewsCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  tags           String[]      @default([])
  author         String?
  
  // Publishing
  publishedAt    DateTime      // When to show on site
  status         ArticleStatus @default(DRAFT)
  
  // Event-specific fields (only used when type = EVENT)
  eventStartDate DateTime?     // Event start date
  eventEndDate   DateTime?     // Event end date (optional)
  eventUrl       String?       // External event website URL
  isFeatured     Boolean       @default(false) // Show at top (events only)
  
  // Event location
  venue          String?       // "Las Vegas Convention Center"
  location       String?       // "Las Vegas, NV"
  booth          String?       // "Booth #C4521"
  hall           String?       // "Hall A4"
  eventType      String?       // "Trade Show", "Conference", "Webinar"
  attendees      String?       // "140,000+"
  
  // SEO
  metaTitle       String?
  metaDescription String?
  ogImage         String?
  
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  
  @@index([type, publishedAt(sort: Desc)])
  @@index([type, status, publishedAt(sort: Desc)])
  @@index([type, eventStartDate(sort: Asc)])
  @@index([type, isFeatured, eventStartDate(sort: Asc)])
  @@index([categoryId])
  @@index([status])
}

// ============================================
// UNIVERSAL FORMS SYSTEM
// ============================================

enum FormType {
  DOWNLOAD  // Form for downloading resources (gated content)
  CONTACT   // Form for contact/submissions (no download)
}

// Universal reusable forms
model Form {
  id          String   @id @default(cuid())
  name        String   // "Resource Download Form", "Contact Sales Form"
  slug        String   @unique
  description String?  @db.Text
  type        FormType @default(CONTACT) // Type of form
  
  // Field configuration (JSON array)
  fields      Json     // Array of field definitions
  
  // Success configuration
  successTitle   String? @default("Thank You!")
  successMessage String? @db.Text @default("Your form has been submitted successfully.")
  redirectUrl    String? // Optional redirect after success
  
  // Webhook integration
  webhookUrl     String?
  webhookHeaders Json?   // Custom headers for webhook { "Authorization": "Bearer ..." }
  
  // Email notifications (optional)
  notifyEmail    String? // Email for new submission notifications
  
  // Status
  isActive    Boolean  @default(true)
  
  // Relations
  submissions FormSubmission[]
  resources   Resource[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([slug])
  @@index([isActive])
}

// Form submissions (universal leads)
model FormSubmission {
  id          String   @id @default(cuid())
  
  // Form relation
  formId      String
  form        Form     @relation(fields: [formId], references: [id], onDelete: Cascade)
  
  // Submitted data (flexible JSON structure)
  data        Json     // All form field values
  
  // Metadata
  ipAddress   String?
  userAgent   String?
  referer     String?
  
  // Webhook status
  webhookSent     Boolean  @default(false)
  webhookError    String?  @db.Text
  webhookResponse Json?    // Response from webhook
  webhookAttempts Int      @default(0)
  lastWebhookTry  DateTime?
  
  // Email status
  emailSent   Boolean  @default(false)
  emailError  String?  @db.Text
  
  createdAt   DateTime @default(now())
  
  @@index([formId, createdAt(sort: Desc)])
  @@index([createdAt(sort: Desc)])
  @@index([webhookSent])
}

// ============================================
// RESOURCES SYSTEM
// ============================================

// Resource categories
model ResourceCategory {
  id          String     @id @default(cuid())
  name        String     @unique
  slug        String     @unique
  description String?    @db.Text
  icon        String?    // HeroIcon name (e.g., "DocumentTextIcon")
  color       String?    // Tailwind color class (e.g., "bg-blue-100 text-blue-700")
  position    Int        @default(0)
  isActive    Boolean    @default(true)
  
  resources   Resource[]
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  @@index([position])
  @@index([isActive])
}

enum ResourceStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// Resources (documents, videos, catalogs)
model Resource {
  id               String           @id @default(cuid())
  title            String
  slug             String           @unique
  description      String           @db.Text // Full description
  shortDescription String?          // For cards/previews
  
  // Files
  thumbnailImage      String?          // Preview image (S3 key)
  file                String           // Main file (S3 key) - can be PDF, video, etc.
  fileType            String           // "PDF", "Video", "Document"
  fileSize            String?          // "15.2 MB"
  fileMeta            String?          // "124 pages" or "24 min" or "MP4"
  allowDirectDownload Boolean          @default(false) // Allow direct download without viewing details page
  
  // Category
  categoryId       String
  category         ResourceCategory @relation(fields: [categoryId], references: [id])
  
  // FORM INTEGRATION - which form to show for this resource
  formId           String?
  form             Form?            @relation(fields: [formId], references: [id], onDelete: SetNull)
  
  // Status and publishing
  status           ResourceStatus   @default(DRAFT)
  publishedAt      DateTime?
  
  // SEO
  metaTitle        String?
  metaDescription  String?
  ogImage          String?
  
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  
  @@index([categoryId])
  @@index([status, publishedAt(sort: Desc)])
  @@index([formId])
}

// ============================================
// SITE SETTINGS
// ============================================

// Global site settings (single row)
model SiteSettings {
  id        String   @id @default("site_settings") // Always same ID
  
  // Special Pages Settings
  newsroomTitle        String? @default("Newsroom")
  newsroomDescription  String? @db.Text
  newsroomHeroImage    String?
  newsroomMetaTitle    String?
  newsroomMetaDesc     String? @db.Text
  newsroomOgImage      String?
  
  resourcesTitle       String? @default("Resources")
  resourcesDescription String? @db.Text
  resourcesHeroImage   String?
  resourcesMetaTitle   String?
  resourcesMetaDesc    String? @db.Text
  resourcesOgImage     String?
  
  // Header Navigation (JSON array of menu items)
  headerNavigation     Json?   // [{ label, url, order, isActive }]
  
  // Footer Settings (JSON object)
  footerContent        Json?   // { description, address[], phone, fax, phoneTollFree, aiAgent, email, companyLinks[], socialLinks[], appLinks{ appStore, googlePlay }, copyright, legalLinks[] }
  
  // Catalog Password Protection
  catalogPassword      String? // Password to access catalog page (plain text for simplicity)
  catalogPasswordEnabled Boolean @default(false) // Enable/disable password protection
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// Admin Activity Log
enum AdminAction {
  CREATE
  UPDATE
  DELETE
  LOGIN
  LOGOUT
}

model AdminLog {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  action      AdminAction
  entityType  String      // e.g., "Page", "Product", "User", "Settings"
  entityId    String?     // ID of the affected entity
  entityName  String?     // Name/title of the affected entity for display
  details     Json?       // Additional details about the action
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime    @default(now())
  
  @@index([userId])
  @@index([createdAt])
  @@index([entityType])
}
