datasource db {
  provider = "postgresql"
}

// Auth models

enum Role {
  ADMIN
  USER
}

model User {
  id           String     @id @default(cuid())
  email        String     @unique
  passwordHash String
  name         String?
  role         Role       @default(USER)
  isActive     Boolean    @default(true)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  
  // Relations
  adminLogs    AdminLog[]
}

